<%include ../layout/headerAdmin.ejs %>

		<div class="right">
			<div class="form__so1">
				<div class="nut d-flex justify-content-end">
					<div class="btn btn-warning mr-3 ds">Danh Sách</div>
					<div class="btn btn-primary mr-5 up" style="display:none;">UpLoad</div>
				</div>
				<div class="form-upload">
					<h2 class="text-md-center">UpLoad Sản Phẩm</h2>
					<form action="/admin/upload" method="post"  enctype="multipart/form-data">
						<div class="form-group">
					    <label for="formGroupExampleInput">Tên Sản Phẩm</label>
					    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Tên Sản Phẩm" name="tensp">
					  </div>
					  <div class="form-group">
					    <label for="formGroupExampleInput2">Giá Sản Phẩm</label>
					    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Giá Sản Phẩm" name="gia">
					  </div>

					  <div class="form-group">
					    <label for="formGroupExampleInput2">Mô tả sản phẩm</label>
					    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Mô tả sản Phẩm" name="mota">
					  </div>

					  <div class="form-group">
							<label for="inputState">Thể Loại</label>
				      <select id="inputState" class="form-control" name="theloai">
				        <%data.forEach((value,key)=>{%>
									<option value="<%=value.chuyenmuc%>"><%=value.chuyenmuc%></option>
								<%})%>
				      </select>
					  </div>
						<%# <form class="" action="/admin/uploadAnh" method="post" enctype="multipart/form-data"> %>
							<div class="form-group">
								<input type="file" name="avatar" id="file" class="inputfile" />
								<label for="file">Choose a file</label>
							</div>
						<%# </form> %>
						<button class="btn btn-primary">ADD</button>
					</form>
				</div>
				<!-- Heets Form up Load -->
				<div class="danh_sach mt-5" style="display:none;">
					<div class="input-group mb-3">
						<form action="/tim" class="d-flex">
							<div class="input-group-prepend">
						    <select class="tim" name="timkiem">
						    	<option value="id">ID</option>
						    	<option value="name">NAME</option>
						    </select>
						  </div>
						  <input type="text" style="width:444px;">
							<button type="submit" style="color:#FFF;background:#547f92;padding: 0px 14px;font-size: 14px;border: none;">Tìm</button>
						</form>
					</div>
					<table class="table">
					  <thead class="thead-dark">
					    <tr>
					      <th scope="col">STT</th>
					      <th scope="col">Tên Sản Phẩm</th>
					      <th scope="col">Giá</th>
					      <th scope="col">Ảnh</th>
					      <th scope="col">Thể Loại</th>
					      <th scope="col">Tùy Chọn</th>
					    </tr>
					  </thead>
					  <tbody>

					    <%dulieu.forEach((value,key)=>{%>
								<tr>
						      <th scope="row"><%=key+1%></th>
						      <td><%=value.tensp%></td>
						      <td><%=value.gia%> <sup>đ</sup></td>
									<td width="70" height="70"><img src="/uploads/<%=value.img%>" alt=""></td>
									<td><%=value.theloai%></td>
									<td>
										<a href="/admin/edit/<%=value._id%>" class="btn btn-success">Edit</a>
										<a href="/admin/xoa/<%=value._id%>" class="btn btn-danger"
									 onclick="return xoahaykhong('Bạn Thật Sự Muốn Xóa !')">Xóa</a>
									</td>
						    </tr>
							<%})%>
					  </tbody>
						<script type="text/javascript">
							var xoahaykhong=(tinnhan)=>{
								if(window.confirm(tinnhan)===true) return true;
								return false;
							}
						</script>
					</table>
				</div>
		</div>
	</div>
	</div> <!-- Xong container -->

	<!-- Phần Javascript -->
<%include ../layout/footerAdmin.ejs %>
